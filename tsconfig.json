{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "express", "jest"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/@types", "node_modules/*"]
    },
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*", "bin/www.ts"],
}
